{
    "name": "express-vue-mvc-starter",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "test": "eslint app && NODE_ENV=development nyc ava",
        "lint": "eslint app",
        "build": "npm run clean && npm run sass && npm run copy",
        "copy": "ncp app dist",
        "sass": "node-sass --output-style compressed app/assets/scss/app.scss app/assets/rendered/style.css",
        "start": "gulp",
        "clean": "rimraf dist",
        "preversion": "npm run test",
        "version": "git add .",
        "postversion": "git push --follow-tags",
        "build-deb": "node build-deb.js"
    },
    "ava": {
        "files": [
            "test/**/*.js"
        ],
        "source": [
            "**/*.js",
            "!dist/**/*"
        ],
        "concurrency": 5,
        "failFast": true,
        "powerAssert": false,
        "require": [
            "babel-register"
        ],
        "babel": "inherit"
    },
    "nyc": {
        "include": [
            "app/**/*.js"
        ],
        "reporter": [
            "text-summary"
        ]
    },
    "dependencies": {
        "babel-cli": "^6.26.0",
        "babel-plugin-istanbul": "^4.1.5",
        "babel-register": "^6.26.0",
        "body-parser": "^1.18.2",
        "compression": "^1.7.1",
        "cookie-parser": "^1.3.3",
        "cookie-session": "^2.0.0-beta.3",
        "csurf": "^1.9.0",
        "dotenv": "^4.0.0",
        "express": "^4.16.2",
        "express-session": "^1.15.6",
        "express-validator": "^4.2.1",
        "express-vue": "^4.0.13",
        "glob": "^7.1.1",
        "global": "^4.3.1",
        "gulp-ava": "^0.18.0",
        "helmet": "^3.9.0",
        "i18n": "^0.8.3",
        "method-override": "^2.3.10",
        "morgan": "^1.9.0",
        "node-monkey": "^1.0.0-beta.5",
        "node-sass": "^4.5.1",
        "serve-favicon": "^2.4.5"
    },
    "devDependencies": {
        "ava": "^0.23.0",
        "axios": "^0.17.0",
        "babel-core": "^6.26.0",
        "babel-eslint": "^8.0.0",
        "babel-preset-es2015": "^6.24.0",
        "babel-preset-node6": "^11.0.0",
        "del": "^3.0.0",
        "eslint": "^4.9.0",
        "eslint-plugin-ava": "^4.2.2",
        "gulp": "^3.9.1",
        "gulp-babel": "^7.0.0",
        "gulp-concat": "^2.6.1",
        "gulp-coveralls": "^0.1.4",
        "gulp-eslint": "^4.0.0",
        "gulp-file-cache": "0.0.1",
        "gulp-livereload": "^3.8.1",
        "gulp-nodemon": "^2.2.1",
        "gulp-notify": "^3.0.0",
        "gulp-nsp": "^2.4.2",
        "gulp-ruby-sass": "^2.0.1",
        "gulp-sass": "^3.1.0",
        "gulp-sourcemaps": "^2.6.1",
        "isparta": "^4.0.0",
        "mocha": "^4.0.0",
        "ncp": "^2.0.0",
        "nyc": "^11.2.1",
        "request": "^2.83.0",
        "rimraf": "^2.6.2",
        "time-grunt": "^1.2.1",
        "uuid": "^3.1.0"
    },
    "main": "index.js",
    "author": "Daniel Cherubini <daniel@cherubini.casa>",
    "license": "MIT"
}
